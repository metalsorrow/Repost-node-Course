<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navegation.ejs') %>

    <main>
        <% if(prods.length > 0) { %>
            <div class="grid">
                <% prods.map( element => { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"> <%= element.title %> </h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= element.imageUrl %>" alt="<%= element.title %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price"><%= element.price %></h2>
                        <p class="product__description"><%= element.description %></p>
                    </div>
                    <div class="card__actions">
                        <button href="/admin/edit-product" class="btn">Edit</button>
                        <form action="/admin/delete-product" method="POST">
                            <button href="/" class="btn">Delete</button>
                        </form>
                    </div>
                </article>
                <% }) %>
            </div>
            <% } else {%>
            <h1>No Products found</h1>    
        <% } %>
    </main>
</body>

<%- include('../includes/end.ejs') %>